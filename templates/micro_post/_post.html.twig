<div class="mb-4">
    <a href="{{ path('app_micro_post_show', { post: post.id}) }}">
        <p class="text-2xl"> {{ post.title }} </p>
    </a>
    <p class="text-xl dark:text-gray-400">{{ post.text }}</p>
    <p class="text-gray-500 dark:text-gray-300">{{ post.created|date("M j, Y") }}</p>
    <div>
        <a href='#'>Like <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">0</span>  </a>
        <a href='#' class="text-sm text-gray-500 dark:text-gray-400">user@email.com </a>
    </div>
    <div class="flex">
        <a href="{{ path('app_micro_post_edit', {post: post.id}) }}" class="mr-2">Edit</a>
        <a href="{{ path('app_micro_post_comment', {post: post.id}) }}">Comment <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{post.comments.count}}</span></a>
    </div>
