{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
<div>
		{% if posts|length > 0 %}
				{% for post in posts %}
				<a href="{{ path('app_micro_post_show', { post: post.id}) }}">
					<p>
						{{ post.title }}
					</p>
					</a>

				{% endfor %}
		{% else %}
			<h2>There's nothing here yet</h2>
		{% endif %}
	</div>
{% endblock %}
